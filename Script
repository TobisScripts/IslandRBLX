local Rayfield = loadstring(game:HttpGet('https://sirius.menu/rayfield'))()

local Window = Rayfield:CreateWindow({
   Name = "Project Z | Mobile Farm",
   LoadingTitle = "Loading Simple Interface...",
   LoadingSubtitle = "by Gemini x TobiScripts",
   ConfigurationSaving = { Enabled = true, FolderName = "ProjectZ_Rayfield" },
   KeySystem = false
})

-- MOBILE TOGGLE BUTTON
local ScreenGui = Instance.new("ScreenGui")
local ToggleButton = Instance.new("TextButton")
ScreenGui.Parent = game:GetService("CoreGui")
ToggleButton.Parent = ScreenGui
ToggleButton.BackgroundColor3 = Color3.fromRGB(44, 44, 44)
ToggleButton.Position = UDim2.new(0.1, 0, 0.1, 0)
ToggleButton.Size = UDim2.new(0, 50, 0, 50)
ToggleButton.Text = "MENU"
ToggleButton.TextColor3 = Color3.fromRGB(255, 255, 255)
ToggleButton.Draggable = true

ToggleButton.MouseButton1Click:Connect(function()
    game:GetService("VirtualInputManager"):SendKeyEvent(true, Enum.KeyCode.RightControl, false, game)
end)

-- TAB 1: MOB FARM
local MobTab = Window:CreateTab("‚öîÔ∏è Mob Farm", 4483362458)

MobTab:CreateDropdown({
   Name = "Select Mob",
   Options = {"Slime", "Blue Slime", "Pink Slime", "Green Slime", "Buffalocor", "Wizard", "Scorpion", "Pirate", "Crab"},
   CurrentOption = {"Slime"},
   MultipleOptions = false,
   Flag = "MobSelect",
   Callback = function(Option)
      getgenv().TargetMob = Option[1]
   end,
})

MobTab:CreateToggle({
   Name = "Start Auto-Farm",
   CurrentValue = false,
   Flag = "MobToggle",
   Callback = function(Value)
      getgenv().AutoFarm = Value
   end,
})

-- TAB 2: BOSS FARM
local BossTab = Window:CreateTab("üëπ Boss Farm", 4483362458)

BossTab:CreateDropdown({
   Name = "Select Boss",
   Options = {"Slime Queen", "Wizard Boss", "Baphomet", "Kor"},
   CurrentOption = {"Slime Queen"},
   MultipleOptions = false,
   Flag = "BossSelect",
   Callback = function(Option)
      getgenv().TargetBoss = Option[1]
   end,
})

BossTab:CreateToggle({
   Name = "Auto-Spawn (Tokens)",
   CurrentValue = false,
   Flag = "TokenToggle",
   Callback = function(Value)
      getgenv().AutoSpawn = Value
   end,
})

BossTab:CreateToggle({
   Name = "Start Boss Farm",
   CurrentValue = false,
   Flag = "BossToggle",
   Callback = function(Value)
      getgenv().BossFarm = Value
   end,
})
